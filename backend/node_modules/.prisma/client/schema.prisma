generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())
  profile       Profile?
}

model Profile {
  id                  Int       @id @default(autoincrement())
  user                User      @relation(fields: [userId], references: [id])
  userId              Int       @unique
  goal                String
  experience          String
  path                String
  pushup_step         Int       @default(0)
  pullup_step         Int       @default(0)
  squat_step          Int       @default(0)
  current_program_day Int       @default(0)
  workouts            Workout[]
  current_program     Program?  @relation(fields: [current_program_id], references: [id])
  current_program_id  Int?
}

model Program {
  id           Int          @id @default(autoincrement())
  name         String
  path         String
  description  String?
  profiles     Profile[]
  program_days ProgramDay[]
}

model ProgramDay {
  id                Int               @id @default(autoincrement())
  program           Program           @relation(fields: [program_id], references: [id])
  program_id        Int
  day_name          String
  day_order         Int
  program_exercises ProgramExercise[]
}

model ProgramExercise {
  id             Int        @id @default(autoincrement())
  program_day    ProgramDay @relation(fields: [program_day_id], references: [id])
  program_day_id Int
  exercise_name  String
  target_sets    Int
  target_reps    String
}

model Workout {
  id            Int           @id @default(autoincrement())
  profile       Profile       @relation(fields: [profileId], references: [id])
  profileId     Int
  timestamp     DateTime      @default(now())
  exercise_logs ExerciseLog[]
}

model ExerciseLog {
  id        Int      @id @default(autoincrement())
  workout   Workout  @relation(fields: [workoutId], references: [id])
  workoutId Int
  name      String
  rpe       Int?
  notes     String?
  set_logs  SetLog[]
}

model SetLog {
  id            Int         @id @default(autoincrement())
  exercise_log  ExerciseLog @relation(fields: [exerciseLogId], references: [id])
  exerciseLogId Int
  reps          Int
  weight        Float?      @default(0)
}
